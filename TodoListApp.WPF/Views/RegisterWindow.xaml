<Window x:Class="TodoListApp.WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TODO List - Регистрация" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Регистрация" 
                   FontSize="28" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,20,0,30"/>

        <!-- Registration Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Имя пользователя *"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox materialDesign:HintAssist.Hint="Email *"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox materialDesign:HintAssist.Hint="Имя"
                         Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox materialDesign:HintAssist.Hint="Фамилия"
                         Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <PasswordBox x:Name="PasswordBox"
                             materialDesign:HintAssist.Hint="Пароль *"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0,0,0,15"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <PasswordBox x:Name="ConfirmPasswordBox"
                             materialDesign:HintAssist.Hint="Подтверждение пароля *"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0,0,0,15"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="45"
                        Margin="0,10,0,10"/>

                <Button Content="Назад к входу"
                        Command="{Binding BackCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
